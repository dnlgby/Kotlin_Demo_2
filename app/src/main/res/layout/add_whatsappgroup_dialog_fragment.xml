<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/main_AddWhatsappGroupDialogFragmentGroupNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group name..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_AddWhatsappGroupDialogFragmentGroupDesctiptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Group description..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_AddWhatsappGroupDialogFragmentGroupNameEt" />


    <EditText
        android:id="@+id/main_AddWhatsappGroupDialogFragmentGroupInviteLinkEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Group Invite link..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_AddWhatsappGroupDialogFragmentGroupDesctiptionEt" />


    <Button
        android:id="@+id/main_AddWhatsappGroupDialogFragmentGroupCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/main_AddWhatsappGroupDialogFragmentGroupOkBtn"
        app:layout_constraintTop_toBottomOf="@+id/main_AddWhatsappGroupDialogFragmentGroupInviteLinkEt" />

    <Button
        android:id="@+id/main_AddWhatsappGroupDialogFragmentGroupOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_AddWhatsappGroupDialogFragmentGroupInviteLinkEt" />


</androidx.constraintlayout.widget.ConstraintLayout>